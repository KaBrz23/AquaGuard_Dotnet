@model IEnumerable<AquaGuard_Dotnet.Models.Tanque>

@{
    ViewData["Title"] = "Index";
}

<div class="container1">
    <h1>TANQUES</h1>
    <br />
    <p>
        <a class="btn btn-primary" asp-action="Create">Adicionar</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.nome)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.hasFissuras)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.data)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.userId)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.hasFissuras)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.data)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.userId)
                    </td>
                    <td class="table-actions">
                        <a class="btn btn-info" asp-action="Edit" asp-route-id="@item.Id">Editar</a>
                        <a class="btn btn-success" asp-action="Details" asp-route-id="@item.Id">Detalhes</a>
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Excluir</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
